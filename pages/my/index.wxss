/* pages/my/index.wxss */
.container{
    background-color: #f2f2f2;
    width:100%;
    height:100vh;
}
.user-info{
    padding-top: 60rpx;
    background: #fff;
}
.user-info .img{
     border-radius: 50%;
    margin: 30rpx auto 40rpx;
    height: 200rpx;
    width: 200rpx;
    box-shadow: 0 0 20rpx rgba(0,0,0, 0.2);
}
.user-info .img image{
    height: 100%;
    width:100%;
    border-radius: 50%;
}
.user-info .user-name{
    display: block;
    padding: 30rpx 0;
    text-align: center;
}
.my-wallet{
    margin-top: 20rpx;
    padding: 30rpx;
    background-color: #fff;
    display: flex;  
    align-items: center;
    justify-content: space-between;
}
.btn-login{
    width:90%;
    position: absolute;
    bottom: 20rpx;
    left:5%;
}